<% include header.ejs %>


    <div class="container">
        <div class="row">

            <!-- Content -->
            <div class="content">
                <!-- Animated -->
                <div class="animated fadeIn">
                    <!-- Widgets  -->
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="stat-widget-five">
                                        <div class="stat-icon dib flat-color-1">
                                            <i class="pe-7s-cash"></i>
                                        </div>
                                        <div class="stat-content">
                                            <div class="text-left dib">
                                                <div class="stat-text">$
                                                    <span class="count">
                                                        <%= revenueSum %>
                                                    </span>
                                                </div>
                                                <div class="stat-heading">Revenue</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="stat-widget-five">
                                        <div class="stat-icon dib flat-color-2">
                                            <i class="pe-7s-cart"></i>
                                        </div>
                                        <div class="stat-content">
                                            <div class="text-left dib">
                                                <div class="stat-text">
                                                    <span class="count">
                                                        <%= itemsSoldCount %>
                                                    </span>
                                                </div>
                                                <div class="stat-heading">Sales</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="stat-widget-five">
                                        <div class="stat-icon dib flat-color-3">
                                            <i class="pe-7s-note2"></i>
                                        </div>
                                        <div class="stat-content">
                                            <div class="text-left dib">
                                                <div class="stat-text">
                                                    <span class="count">
                                                        <%= itemsConsignedCount %>
                                                    </span>
                                                </div>
                                                <div class="stat-heading">Consigments</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="stat-widget-five">
                                        <div class="stat-icon dib flat-color-4">
                                            <i class="pe-7s-users"></i>
                                        </div>
                                        <div class="stat-content">
                                            <div class="text-left dib">
                                                <div class="stat-text">
                                                    <span class="count">
                                                        <%= customersCount %>
                                                    </span>
                                                </div>
                                                <div class="stat-heading">Clients</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Widgets -->
                    <!--  Traffic  -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="box-title">Recent Invoices</h4>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="card-body">
                                            <div id="traffic-chart" class="traffic-chart">
                                                <table class="table table-hover table-striped table-sm">
                                                    <thead class=" thead-dark">
                                                        <tr>
                                                            <th scope="col">ID</th>
                                                            <th scope="col">Item</th>
                                                            <th scope="col">Customer</th>
                                                            <th scope="col">Date Sold</th>
                                                            <th scope="col">Cost price</th>
                                                            <th scope="col">Sell price</th>
                                                            <th scope="col">Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% invoices.forEach((element) => { %>
                                                            <tr>
                                                                <td>
                                                                    <a id="<%=element.id%>" href="/getInvoice/<%=element.id%>">
                                                                        <%=element.id%>
                                                                    </a>
                                                                </td>
                                                                <td>
                                                                    <%=element.item%>
                                                                </td>
                                                                <td>
                                                                    <%=element.customer%>
                                                                </td>
                                                                <td>
                                                                    <%=element.solddate%>
                                                                </td>
                                                                <td>
                                                                    $
                                                                    <%=element.costprice || 0%>
                                                                </td>
                                                                <td>
                                                                    $
                                                                    <%=element.sellprice || 0%>
                                                                </td>
                                                                <td>
                                                                    <%=element.status%>
                                                                </td>
                                                                <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </div>
                        </div>
                        <!-- /# column -->
                    </div>
                    <!--  /Traffic -->
                </div>
                <!-- .animated -->
            </div>
            <!-- /.content -->

        </div>
    </div>



    <% include footer.ejs %>