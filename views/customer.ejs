<% include header.ejs %>

    <div class="container">
        <div class="row">

            <div class="col-md-8 offset-md-2 mt-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="box-title">Customer </h4>
                    </div>
                    <div class="card-body">
                        <ul>
                            <% customer.forEach((element) => { %>

                                <div>
                                    <div class="single-view-list-item">ID:
                                        <%=element.id%>
                                    </div>
                                    <div class="single-view-list-item">
                                        Name:
                                        <%=element.name%>
                                    </div>
                                    <div class="single-view-list-item">
                                        Phone:
                                        <%=element.phone%>
                                    </div>
                                    <div class="single-view-list-item">
                                        Mobile:
                                        <%=element.mobile%>
                                    </div>
                                    <div class="single-view-list-item">
                                        Email:
                                        <%=element.email%>
                                    </div>
                                    <div class="single-view-list-item">
                                        Address:
                                        <%=element.address%>
                                    </div>
                                    <div class="single-view-list-item">
                                        City:
                                        <%=element.city%>
                                    </div>
                                    <div class="single-view-list-item">
                                        State:
                                        <%=element.state%>
                                    </div>
                                    <div class="single-view-list-item">
                                        Zip:
                                        <%=element.zip%>
                                    </div>
                                    <div class="single-view-list-item">
                                        Country:
                                        <%=element.country%>
                                    </div>
                                    <div class="btn-toolbar mt-4">
                                        <button class="btn btn-danger deleteCustomer btn-sm" name="delete" id="<%=element.id%>" value="<%=element.id%>">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                                <% }); %>
                        </ul>
                    </div>

                </div>

            </div>

        </div>
        <!-- End row -->
    </div>
    <!-- End customer -->

    <% include footer.ejs %>