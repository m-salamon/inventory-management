<% include header.ejs %>


    <div class="container">
        <div class="row">

            <div class="col-sm-6">
                <div class="addItem">
                    <!-- add item -->
                    <h2>Add A Item</h2>
                    <form method="post" action="/addItem">
                        <div class="form-group">
                            <input id="itemName" class="form-control" type="text" name="name" placeholder="Item name"  readonly="readonly"/>
                        </div>
                        <div class="form-group">
                            <input id="itemColor" class="form-control" type="text" name="colorcode" placeholder="Color" list="colors" required>
                            <datalist id="colors">
                            <% colors.forEach((element) => { %>
                                <option value="<%= element.colorcode %>">
                                <% }); %>
                            </datalist>
                        </div>
                        <div class="form-group">
                            <input id="itemLength" class="form-control" type="text" name="length" placeholder="Length" list="lengths" required>
                            <datalist id="lengths">
                            <% lengths.forEach((element) => { %>
                                <option value="<%= element.length %>">
                                <% }); %>
                            </datalist>
                        </div>
                        <div class="form-group">
                            <input id="serialNumber" class="form-control" type="text" name="serialnumber" placeholder="Serial number" required />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-sm-6">
                <ul class="list-group">
                    <% items.forEach((element) => { %>
                     
                            <a id="<%=element.id%>" href="/item/<%=element.id%>" class="list-group-item">
                        
                                <div>Name:
                                    <%=element.name%>
                                </div>
                                <div>Color:
                                    <%=element.colorcode%>
                                </div>
                                <div>Length:
                                    <%=element.length%>
                                </div>
                                <div>Serial number:
                                    <%=element.serialnumber%>
                                </div>
                                <div>Status:
                                    <%=element.status%>
                                </div>
                                <div>Customer:
                                    <%=element.customer%>
                                </div>
                                <div>Reservations:
                                    <%=element.reservations%>
                                </div>
                                </a>
                                <button class="btn btn-danger deleteItem" name="delete" id="<%=element.id%>"  value="<%=element.id%>">
                                    Delete
                                </button>
                    <% }); %>
                </ul>
            </div>

        </div>
    </div>


    <% include footer.ejs %>