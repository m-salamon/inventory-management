<% include header.ejs %>

  <div class="container">
    <div class="row">

      <div class="col-sm-8">
        <div class="row page-title ">
          <div class="col-3">
            Total:
            <%= totalResult %>
          </div>
        </div>

        <table class="table table-hover table-striped table-sm">
          <thead class="thead-dark ">
            <tr>
              <th scope="col ">First name</th>
              <th scope="col ">Last name</th>
              <th scope="col ">Email</th>
              <th scope="col ">Is verified</th>
              <th scope="col ">Is admin</th>
              <th scope="col "></th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((element) => { %>
              <tr>
                <td>
                  <%=element.firstname%>
                </td>
                <td>
                  <%=element.lastname%>
                </td>
                <td>
                  <%=element.email%>
                </td>
                <td>
                  <% if(element.verify == 1) { %>
                    Yes
                    <% } %>
                </td>
                <td>
                  <% if(element.isadmin == 1) { %>
                    Yes
                    <% } %>
                </td>

                <td>
                  <div class="btn-toolbar">
                    <button class="btn btn-success verifyUser m-1 btn-sm" id="<%=element.id%>" value="<%=element.id%>">Verify</button>
                    <button class="btn btn-danger deleteUser m-1 btn-sm" name="delete" id="<%=element.id%>" value="<%=element.id%>">Delete </button>
                  </div>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>

      </div>

    </div>
    <!-- End row -->
  </div>
  <!-- End container -->


  <% include footer.ejs %>