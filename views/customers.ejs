<% include header.ejs %>


    <div class="container">
        <div class="row">

            <div class="col-sm-6">
                <div class="addCustomer">
                    <!-- add item -->
                    <h2>Add A Customer</h2>
                    <form method="post" action="/addCustomer">
                        <div class="form-group">
                            <input id="customerName" class="form-control" type="text" name="name" placeholder="Customer name" />
                        </div>
                        <div class="form-group">
                            <input id="customerName" class="form-control" type="text" name="email" placeholder="Email" />
                        </div>
                        <div class="form-group">
                            <input id="customerName" class="form-control" type="text" name="address" placeholder="Address" />
                        </div>
                        <div class="form-group">
                        <input id="customerCity" class="form-control" type="text" name="city" placeholder="City" list="citys">
                        <datalist id="citys">
                        <% citys.forEach((element) => { %>
                            <option value="<%= element.city %>">
                            <% }); %>
                        </datalist>
                        </div>
                        <div class="form-group">
                        <input id="customerState" class="form-control" type="text" name="state" placeholder="State" list="states">
                        <datalist id="states">
                        <% states.forEach((element) => { %>
                            <option value="<%= element.state %>">
                            <% }); %>
                        </datalist>
                        </div>
                        <div class="form-group">
                        <input id="customerZip" class="form-control" type="text" name="zip" placeholder="Zip" list="zips">
                        <datalist id="zips">
                        <% zips.forEach((element) => { %>
                            <option value="<%= element.zip %>">
                            <% }); %>
                        </datalist>
                        </div>
                        <div class="form-group">
                            <input id="customerName" class="form-control" type="text" name="country" placeholder="Country" />
                        </div>
                       
                        <div class="form-group">
                            <button class="btn btn-success" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-sm-6">
                <ul class="list-group">
                    <% customers.forEach((element) => { %>
                     
                            <a id="<%=element.id%>" href="/item/<%=element.id%>" class="list-group-item">
                        
                                <div>Name:
                                    <%=element.name%>
                                </div>
                                <div>email:
                                    <%=element.email%>
                                </div>
                                <div>address:
                                    <%=element.address%>
                                </div>
                                <div>city:
                                    <%=element.city%>
                                </div>
                                <div>state:
                                    <%=element.state%>
                                </div>
                                <div>zip:
                                    <%=element.zip%>
                                </div>
                                <div>country:
                                    <%=element.country%>
                                </div>
                                </a>
                                <button class="btn btn-danger deleteCustomer" name="delete" id="<%=element.id%>"  value="<%=element.id%>">
                                    Delete
                                </button>
                    <% }); %>
                </ul>
            </div>

        </div>
    </div>


    <% include footer.ejs %>